@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventEase</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #001f3f; /* Dark Blue */
            color: white;
        }

        .navbar {
            background-color: #004080; /* Slightly lighter blue */
        }

        .navbar-brand {
            font-weight: bold;
            color: white;
        }

        .jumbotron {
            background-color: #00274d; /* Dark blue jumbotron */
            color: white;
            padding: 50px;
            border-radius: 10px;
        }

            .jumbotron h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .jumbotron p {
                font-size: 1.5rem;
            }

        .btn-primary {
            background-color: #007FFF;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-group {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">EventEase</a>
    </nav>

    <div class="jumbotron text-center">
        <div class="container">
            <h1>Welcome to EventEase!</h1>
            <p>Manage your venues, events, and bookings with ease.</p>
            <div class="btn-group" role="group">
                <a href="/Venue" class="btn btn-primary btn-lg">Venues</a>
                <a href="/Event" class="btn btn-primary btn-lg">Events</a>
                <a href="/Booking" class="btn btn-primary btn-lg">Bookings</a>
            </div>
        </div>
    </div>
</body>
</html>
